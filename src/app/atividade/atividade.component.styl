h1
  position: absolute
  top: 20px
  left: 20px
  width: 80%
  max-width: 200px

#carregando
  width: 100%
  min-height: 100%;
  padding: 20px
  display: flex
  align-items: center
  justify-content: center
  flex-direction: column
  color: #742325

  img
    max-width 200px
    width: 100%

  h2
    font-size: 36px
    font-weight: 900
    text-transform: uppercase
    line-height: 1.2em
    text-align: center

  p
    font-size: 22px
    line-height: 1.2em
    margin-bottom: 60px
    text-align: center

  div
    width: 80px
    height: 80px
    position: relative

    span
      display: table
      width: 30px
      height: 30px
      border: solid 5px #742325
      border-radius: 50%
      background: #FFDD4E
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      z-index 2

    div
      position: absolute
      width: 50%
      height: 50%
      border: solid 5px #742325

      &:first-child
        top: 0
        left: 0
        background: #F299B5
        animation animepink 3s infinite

      &:last-child
        bottom: 0
        right: 0
        background: #8FB55C
        animation animegreen 3s infinite

#atividade
    display: flex
    align-items: center
    justify-content: center
    min-height: 100vh
    position relative
    padding-bottom: 100px

    &>div
      width: 100%
      max-width: 980px

      &>div
        display: flex
        width: 100%
        max-width: 500px
        align-items: flex-end
        justify-content: space-between

        img
          width: 100%
          max-width 200px
          transform: translate(0, 10%)

        h2
          font-size: 22px
          color #742325
          text-transform: uppercase

      &>main
        display: flex
        align-items: flex-start

        img
          max-width 500px
          padding: 15px
          background-color: white
          border: solid 4px #742325
          border-radius: 10px

        &>div
          padding: 15px
          line-height: 1.2em

          p
            padding-bottom: 20px

          a
            cursor pointer
            display: table
            padding: 10px 20px
            background: #742325
            border-radius: 10px
            color: white
            margin-bottom: 10px
            width: 100%
            text-align: center
            position relative

            i
              position: absolute
              top: 50%
              left 10px
              transform: scale(1.2) translate(0, -40%)
              color: #efe19a

.fa-redo-alt
  position: absolute
  bottom: 20px
  right: 20px
  display: flex
  align-items: center
  justify-content: center
  background: #742325
  color: white
  font-size: 22px
  width: 55px
  height: 55px
  border-radius: 50%
  cursor pointer
  transition: .5s
  border: solid 5px transparent

  &:hover
    transform: scale(1.1)
    background: #ffdd4e
    color: #742325
    border-color: #742325





@media screen and (max-width: 500px)
  #carregando
    h2
      font-size: 24px
    p
      font-size: 18px

  #atividade>div
    &>div
      flex-direction: column-reverse
      margin: 0 auto
      align-items: center
      padding-top: 20px

      img
        width: 100px

    &>main
      flex-direction: column
      width: 80%
      margin: 0 auto

      img
        width: 100%
        height auto




