h1
  position: absolute
  top: 20px
  left: 20px
  width: 80%
  max-width: 200px

#carregando
  width: 100%
  min-height: 100%;
  padding: 20px
  display: flex
  align-items: center
  justify-content: center
  flex-direction: column
  color: #742325

  img
    max-width 200px
    width: 100%

  h2
    font-size: 36px
    font-weight: 900
    text-transform: uppercase
    line-height: 1.2em
    text-align: center

  p
    font-size: 22px
    line-height: 1.2em
    margin-bottom: 60px
    text-align: center

  div
    width: 80px
    height: 80px
    position: relative

    span
      display: table
      width: 30px
      height: 30px
      border: solid 5px #742325
      border-radius: 50%
      background: #FFDD4E
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      z-index 2

    div
      position: absolute
      width: 50%
      height: 50%
      border: solid 5px #742325

      &:first-child
        top: 0
        left: 0
        background: #F299B5
        animation animepink 3s infinite

      &:last-child
        bottom: 0
        right: 0
        background: #8FB55C
        animation animegreen 3s infinite

#atividade
    display: flex
    align-items: center
    max-width: 920px



@media screen and (max-width: 500px)
  #carregando
    h2
      font-size: 24px
    p
      font-size: 18px


